@page
@model MascotaFeliz.App.Frontend.Pages.ListaMascotasModel
@{
}
<Div class="contenedor-re">

<section class="tabla">  

    <b>Consulta: 
    <input id="gfg" type="text" 
    placeholder="Buscar...">

    <table class="content-table">
     <thead>
        
     <tr>
        <th>Nombre</th>
        <th>Color</th>
        <th>Nombre Dueño</th>
        <th>Detalles</th>
        <th>Editar</th>

    </tr>
    @foreach (var mascota in Model.listaMascotas)
    {
        <tr>
            <td>@mascota.Nombre</td>
            <td>@mascota.Color</td>
            <td>@mascota.Dueno.Nombres</td>
            <td>
                <a class="btn " asp-page="./DetallesMascotas" asp-route-mascotaId="@mascota.Id"><img src="https://cdn.icon-icons.com/icons2/1769/PNG/512/4092564-about-mobile-ui-profile-ui-user-website_114033.png" width="40px" alt=""></a>
            </td>
            <td>
                <a class="btn " asp-page="./EditarMascotas" asp-route-mascotaId="@mascota.Id"><img src="https://cdn.icon-icons.com/icons2/2098/PNG/512/edit_icon_128873.png" width="40px" alt=""> </a>
            </td>

        </tr>
    }
</table>
    </tbody>
    <a class = "btn btn-primary table-btn" asp-page="./EditarMascotas" class="btn-default">Adicionar Mascotas</a>
    </table>
            <script>
                $(document).ready(function() {
                    $("#gfg").on("keyup", function() {
                        var value = $(this).val().toLowerCase();
                        $("#geeks tr").filter(function() {
                            $(this).toggle($(this).text()
                            .toLowerCase().indexOf(value) > -1)
                        });
                    });
                });
            </script> 
         </section>
           </Div> 