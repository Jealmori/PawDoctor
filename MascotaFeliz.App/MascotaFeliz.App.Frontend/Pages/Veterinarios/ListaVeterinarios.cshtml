@page
@model MascotaFeliz.App.Frontend.Pages.ListaVeterinariosModel
@{
}
<Div class="contenedor-re">

<section class="tabla">  

    <b>Consulta: 
    <input id="gfg" type="text" 
    placeholder="Buscar...">

    <table class="content-table">
     <thead>
        
        <tr>

        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Detalles</th>
        <th>Editar</th>

        </tr>
     </thead>   
    <tbody id="geeks">

    @foreach (var veterinario in Model.listaVeterinarios)
    {
        <tr>
            <td>@veterinario.Nombres</td>
            <td>@veterinario.Apellidos</td>
            
            <td>
                <a class="btn " asp-page="./DetallesVeterinarios" asp-route-veterinarioId="@veterinario.Id"><img src="https://cdn.icon-icons.com/icons2/1769/PNG/512/4092564-about-mobile-ui-profile-ui-user-website_114033.png" width="40px" alt=""></a>
            </td>
            <td>
                <a class="btn " asp-page="./EditarVeterinarios" asp-route-veterinarioId="@veterinario.Id"><img src="https://cdn.icon-icons.com/icons2/2098/PNG/512/edit_icon_128873.png" width="40px" alt=""> </a>
            </td>

        </tr>
    }
  </tbody>
    <a class = "btn btn-primary table-btn" asp-page="./EditarVeterinarios" class="btn-default">Adicionar Veterinarios</a>
    </table>
            <script>
                $(document).ready(function() {
                    $("#gfg").on("keyup", function() {
                        var value = $(this).val().toLowerCase();
                        $("#geeks tr").filter(function() {
                            $(this).toggle($(this).text()
                            .toLowerCase().indexOf(value) > -1)
                        });
                    });
                });
            </script> 
         </section>
           </Div> 
        